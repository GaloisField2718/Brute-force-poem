{
  "name": "bitcoin-seed-recovery",
  "version": "1.0.0",
  "description": "Bitcoin seed phrase recovery from incomplete poem",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && tsc workers/seed-checker-worker.ts --outDir dist/workers --module commonjs --target ES2022 --esModuleInterop --skipLibCheck --resolveJsonModule",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "verify": "ts-node scripts/verify-setup.ts",
    "test": "jest",
    "test:derivation": "ts-node scripts/test-derivation.ts",
    "test:bip39": "ts-node scripts/test-bip39.ts",
    "test:apis": "ts-node scripts/check-apis.ts"
  },
  "keywords": ["bitcoin", "bip39", "seed", "recovery"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bitcoinjs-lib": "^6.1.5",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "@bitcoinerlab/secp256k1": "^1.1.1",
    "tiny-secp256k1": "^2.2.3",
    "axios": "^1.6.0",
    "bottleneck": "^2.19.5",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "compromise": "^14.10.0",
    "syllable": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  }
}
